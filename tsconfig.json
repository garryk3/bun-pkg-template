{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "ESNext",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode"
  ],
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}